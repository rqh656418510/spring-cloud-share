<rules>
    <rule>
        <namespace>Employee</namespace>
        <shardingExpression>hash.employee(lastName) == 1</shardingExpression>
        <shards>partition1</shards>
    </rule>
    <rule>
        <namespace>Employee</namespace>
        <shardingExpression>hash.employee(lastName) == 2</shardingExpression>
        <shards>partition2</shards>
    </rule>
    <rule>
        <namespace>Employee</namespace>
        <shardingExpression>hash.employee(lastName) == 3</shardingExpression>
        <shards>partition3</shards>
    </rule>
</rules>